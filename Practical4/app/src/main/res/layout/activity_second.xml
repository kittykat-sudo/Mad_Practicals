<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Activity"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This activity demonstrates custom back button behavior"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnBackToMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Back to Main"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/purple_500" />

    <Button
        android:id="@+id/btnTestBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press Back Button to Test Dialog"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/teal_200" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try pressing the back button or navigation back gesture to see the confirmation dialog!"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/purple_700"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>